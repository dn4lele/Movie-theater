<!DOCTYPE html>
<html>
<head>
	<title>Chairs Order Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

	<style>
	    	    form {
            position: fixed;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
        }
		input[type="number"] {
			padding: 10px;
			margin-bottom: 20px;
			border-radius: 5px;
			border: 1px solid #ccc;
			width: 200px;
			font-size: 16px;
		}
		input[type="submit"] {
			padding: 10px 20px;
			background-color: #4CAF50;
			color: white;
			border: none;
			border-radius: 5px;
			font-size: 16px;
			cursor: pointer;
		}
        a{
            display: inline-block;
        }
        table {
			margin: 1px;
            display: inline-block;

		}
		td.isnottaken {
            width: 1px; 
			padding: 10px;
			border: 1px solid #ccc;
			text-align: center;
			font-size: 16px;
			background-color: #4CAF50;

			font-weight: bold;
			cursor: pointer;
		}
		td.istaken {
            width: 1px; 
			padding: 10px;
			border: 1px solid #ccc;
			text-align: center;
			font-size: 16px;
			background-color: #535353;

			font-weight: bold;
			cursor: pointer;
		}
		td.selected {
			background-color: #f3be00;
			color: white;
		}
		div.co {
			margin: auto;
			width: 40%;
			height: auto;
			align-self: center;
			display: flex; 
			background-color:grey;
			border: 5px solid red;
			box-shadow: 10px 10px 50px red; 

			flex-direction: row-reverse; 
			justify-content: center;  

			flex-wrap: wrap;
			}


			div.screen {
			margin: auto;
			width: 40%;
			height: auto;
			align-self: center;
			display: flex; 
			background-color:grey;
			border: 5px solid grey;
			box-shadow: 10px 10px 50px blue; 

			flex-direction: row-reverse; 
			justify-content: center;  

			flex-wrap: wrap;
			}

			div.fatscreen {
			background-color: grey;
			width: 10px;
			height: 10px;
			margin: 5px;
			text-align:center;
			}
	</style>
</head>
<body>

    <div class="screen">
		<div class="fatscreen"></div>
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

	<%let counter =1%>
    <div class="co">
          <%if(totalChairs.length>0){%>
                    
            <%for(let item of totalChairs){%>	

				<%if(item.istaken){%>
					<div class="row">

						<table >
							<tr>
							<td id="<%=item.id%>" class="istaken" ><%=counter%></td>
							</tr>
						</table>

					</div>
				<%}else{%>
					<div class="row">

						<table>
							<tr>
							<td id="<%=item.id%>" class="isnottaken" onclick="selectSeat(this)"><%=counter%></td>
							</tr>
						</table>

					</div>
				<%}%>



				<%counter++%>

            <%}%>

          <%}else{%>
            <p>no chairs were found<p>
          <%}%>
		</div>



                <script>
                    function selectSeat(seat) {
                        seat.classList.toggle('selected');
                    }

                    function bookSeats() {
						debugger
						var selectedSeats = document.querySelectorAll('.selected');
						var seatIds = [];
						selectedSeats.forEach(function(seat) {
							seatIds.push(seat.getAttribute('id'));
						});

						// Make an AJAX request to the server to book the selected seats
						var xhr = new XMLHttpRequest();
						xhr.open('POST', '/myapi/book/' + seatIds.join(','));
						xhr.setRequestHeader('Content-Type', 'application/json');
						xhr.onload = function() {
							if (xhr.status === 200) {
							// Redirect to the homepage after booking the seats
							window.location.href = '/myapi/homepage';
							} else {
							console.log('Error booking seats: ' + xhr.statusText);
							}
						};
						xhr.send();
						}
                </script>

	<form>
        <h5>refresh the page cuz the chairs are taken </h5>

		<label for="chairs">book chairs</label>
        <a class="btn btn-primary" onclick="bookSeats()">book</a>

	</form>
</body>
</html>