</head>
<body>


    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Cinima</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" >hello admin</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page">add movie</a>
              </li>


          </div>
        </div>
      </nav>



      <div class="container-fluid">
        <div class="row">
          
          <%if(allmovies.length>0){%>
                    
            <%for(let item of allmovies){%>	


              <div id="<%=item.Title%>"  class="card col-lg-2"  >
                <img src="<%=item.Poster%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=item.Title%></h5>
                  <p class="card-text"> <h5>date:</h5><%=item.Year%><Br> <h5>Genre:</h5><%=item.Genre%></p>
                    <a href="/myapi/chairformovie/1" class="btn btn-primary">edit chairs</a>
                    <a href="/myapi/deletemovie/<%=item.Title%>" class="btn btn-primary">delete movies</a>

                </div>
              </div>

            <%}%>

          <%}else{%>
            <p>no movies were found<p>
          <%}%>
    </div>
  </div>



  <script>
    function onclick(){
      debugger
    }
    const deleteButtons = document.querySelectorAll('.delete-movie');
  deleteButtons.forEach(button => {
    button.addEventListener('click', async (event) => {
      const title = event.target.id.split('-')[1];
      const response = await fetch(`/movies/${title}`, { method: 'DELETE' });
      if (response.ok) {
        window.location.reload();
      } else {
        console.error('Failed to delete movie');
      }
    });
  });
  </script>
  


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>
</html>